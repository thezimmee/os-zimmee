// open based on session
app="$@"
kwmc=/Users/thezimmee/Applications/kwm/bin/kwmc
space=$($kwmc query space active name)
if [[ $space == *"chrome" ]] || [[ $space == *"news" ]] || [[ $space == *"tasks" ]] || [[ $space == *"messages" ]] || [[ $space == *"media" ]] || [[ $space == *"[no tag]" ]]
then
	target="/Users/thezimmee"
else
	while read -r line
	do
  		for word in $line
  		do
  			if [[ $word == "dir" ]]
    		then
    			target=${line[@]:4}
    		fi
  		done
	done < /Users/thezimmee/.kwm/sessions/$space
fi

echo $target

if [[ $app == *"Google Chrome" ]]
then
	open -na Google\ Chrome
elif [[ $app == *"Sublime Text" ]] && [[ "$target" == "/Users/thezimmee" || -z "$target" ]]
then
	/Users/thezimmee/.kwm/scripts/openapp Sublime Text
else
	open -a "$app" $target
fi
