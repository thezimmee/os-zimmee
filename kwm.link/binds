/**
 * variables
 * =========
 */
// HYPER key
define HYPER ctrl+alt
// paths
define ~ /Users/thezimmee
define movewindow ~/.kwm/scripts/movewindow
define toggleborders ~/.kwm/scripts/toggleborders
define togglemouse ~/.kwm/scripts/togglemouse
// define layout ~/.kwm/scripts/layout
// define pull ~/.kwm/scripts/pull
// define resizemode ~/.kwm/scripts/resizemode
// define openappdir ~/.kwm/scripts/openappdir
// define stubborn {Simplenote,Preview,TextEdit,Microsoft Word,MindNode,Snapper,Transmit,Byword,iA Writer,Steam,Ceceree,Mactracker}


/**
 * manage kwm
 * ==========
 */
// kwm commands
kwmc bindsym HYPER+shift+cmd-backspace quit
kwmc bindsym HYPER+shift+cmd-\ config reload
// kwmc bindsym HYPER-e space -r focused


/**
 * CONFIG_MODE
 * -----------
 * mode to configure kwm
 */
kwmc mode CONFIG_MODE color ddbdd322
kwmc mode CONFIG_MODE prefix on
kwmc mode CONFIG_MODE timeout 2.0
// activate / deactivate CONFIG_MODE
kwmc bindsym HYPER-, mode activate CONFIG_MODE
kwmc bindsym CONFIG_MODE-escape mode activate default
kwmc bindsym CONFIG_MODE+HYPER-, mode activate default	
kwmc bindsym CONFIG_MODE+HYPER-backspace quit ; mode activate default
kwmc bindsym CONFIG_MODE+HYPER-\ config reload ; mode activate default
kwmc bindsym CONFIG_MODE-f config focus-follows-mouse toggle ; mode activate default
kwmc bindsym CONFIG_MODE-m exec togglemouse ; mode activate default
kwmc bindsym CONFIG_MODE-b exec toggleborders ; mode activate default


/**
 * launcher
 * ========
 */
// kwmc bindsym HYPER-o exec openappdir Google Chrome
// kwmc bindsym HYPER-z exec subl -n ~/.zshrc
// kwmc bindsym HYPER-0 exec subl ~/.kwm/kwmrc
// kwmc bindsym cmd-return sys open -na /Applications/iTerm2.app


/**
 * window selection
 * ================
 */
/** window focus / navigation */
kwmc bindsym HYPER-j window -f west
kwmc bindsym HYPER-k window -f south
kwmc bindsym HYPER-l window -f east
kwmc bindsym HYPER-i window -f north
// kwmc bindsym HYPER-j window -f prev
// kwmc bindsym HYPER-l window -f next
// cycle through monocle windows
kwmc bindsym HYPER-n window -fm next
kwmc bindsym HYPER-m window -fm prev

/**
 * window movement
 * ===============
 */
/** swap window */
kwmc bindsym HYPER+shift-j window -s west
kwmc bindsym HYPER+shift-l window -s east
kwmc bindsym HYPER+shift-i window -s north
kwmc bindsym HYPER+shift-k window -s south
// kwmc bindsym HYPER+shift-l window -s next
// kwmc bindsym HYPER+shift-j window -s prev
/** move window */
kwmc bindsym HYPER+shift+cmd-j window -m west
kwmc bindsym HYPER+shift+cmd-l window -m east
kwmc bindsym HYPER+shift+cmd-i window -m north
kwmc bindsym HYPER+shift+cmd-k window -m south
// kwmc bindsym HYPER+shift-j exec movewindow west
// kwmc bindsym HYPER+shift-l exec movewindow east
// kwmc bindsym HYPER+shift-i exec movewindow north
// kwmc bindsym HYPER+shift-k exec movewindow south
/** move window to a space */
kwmc bindsym HYPER+shift-, window -m space left ; press HYPER-,
kwmc bindsym HYPER+shift-. window -m space right ; press HYPER-.
// kwmc bindsym HYPER+shift-, window -m space left ; space -fExperimental left
// kwmc bindsym HYPER+shift-. window -m space right ; space -fExperimental right
/** move window to display */
kwmc bindsym HYPER+shift-m window -m display next
kwmc bindsym HYPER+shift-n window -m display previous


/**
 * tiling behavior
 * ===============
 */
// set tiling mode for space
kwmc bindsym HYPER-a space -t bsp
kwmc bindsym HYPER-s space -t monocle
kwmc bindsym HYPER-d space -t float

// toggle node type
kwmc bindsym HYPER-p window -c type toggle // monocle | bsp | toggle

// change split-mode of container / window
kwmc bindsym HYPER-; window -c split-mode toggle

// rotate windows counter-clockwise
kwmc bindsym HYPER-r tree rotate 90


/**
 * window interaction
 * ==================
 */







// zoom window
kwmc bindsym HYPER-o window -z fullscreen
kwmc bindsym HYPER-u window -z parent

// float window (toggle)
kwmc bindsym HYPER-'' window -t focused

// resize window to container size
kwmc bindsym HYPER-0 window -r focused

// quick resize window / container
kwmc bindsym HYPER+cmd-right window -c expand 0.01
kwmc bindsym HYPER+cmd-left window -c reduce 0.01
kwmc bindsym HYPER+cmd-up window -c reduce 0.01
kwmc bindsym HYPER+cmd-down window -c expand 0.01

/** --- resize modes --- */
// mode settings
kwmc mode RESIZE_EAST_MODE color 0xFFff4136
kwmc mode RESIZE_EAST_MODE prefix on
kwmc mode RESIZE_EAST_MODE timeout 2.0
kwmc mode RESIZE_WEST_MODE color 0xFFff4136
kwmc mode RESIZE_WEST_MODE prefix on
kwmc mode RESIZE_WEST_MODE timeout 2.0
kwmc mode RESIZE_SOUTH_MODE color 0xFFff4136
kwmc mode RESIZE_SOUTH_MODE prefix on
kwmc mode RESIZE_SOUTH_MODE timeout 2.0
kwmc mode RESIZE_NORTH_MODE color 0xFFff4136
kwmc mode RESIZE_NORTH_MODE prefix on
kwmc mode RESIZE_NORTH_MODE timeout 2.0
// resets to default mode (escape or return)
kwmc bindsym RESIZE_EAST_MODE-escape mode activate default
kwmc bindsym RESIZE_EAST_MODE-return mode activate default
kwmc bindsym RESIZE_WEST_MODE-escape mode activate default
kwmc bindsym RESIZE_WEST_MODE-return mode activate default
kwmc bindsym RESIZE_SOUTH_MODE-escape mode activate default
kwmc bindsym RESIZE_SOUTH_MODE-return mode activate default
kwmc bindsym RESIZE_NORTH_MODE-escape mode activate default
kwmc bindsym RESIZE_NORTH_MODE-return mode activate default
// binds | east
kwmc bindsym HYPER+cmd-l mode activate RESIZE_EAST_MODE
kwmc bindsym RESIZE_EAST_MODE-l window -c expand 0.01 east
kwmc bindsym RESIZE_EAST_MODE-j window -c reduce 0.01 east
kwmc bindsym RESIZE_EAST_MODE-i mode activate RESIZE_NORTH_MODE
kwmc bindsym RESIZE_EAST_MODE-k mode activate RESIZE_SOUTH_MODE
// binds | west
kwmc bindsym HYPER+cmd-j mode activate RESIZE_WEST_MODE
kwmc bindsym RESIZE_WEST_MODE-l window -c expand 0.01 west
kwmc bindsym RESIZE_WEST_MODE-j window -c reduce 0.01 west
kwmc bindsym RESIZE_WEST_MODE-i mode activate RESIZE_NORTH_MODE
kwmc bindsym RESIZE_WEST_MODE-k mode activate RESIZE_SOUTH_MODE
// binds | south
kwmc bindsym HYPER+cmd-k mode activate RESIZE_SOUTH_MODE
kwmc bindsym RESIZE_SOUTH_MODE-k window -c expand 0.01 south
kwmc bindsym RESIZE_SOUTH_MODE-i window -c reduce 0.01 south
kwmc bindsym RESIZE_SOUTH_MODE-l mode activate RESIZE_EAST_MODE
kwmc bindsym RESIZE_SOUTH_MODE-j mode activate RESIZE_WEST_MODE
// binds | north
kwmc bindsym HYPER+cmd-i mode activate RESIZE_NORTH_MODE
kwmc bindsym RESIZE_NORTH_MODE-k window -c expand 0.01 north
kwmc bindsym RESIZE_NORTH_MODE-i window -c reduce 0.01 north
kwmc bindsym RESIZE_NORTH_MODE-l mode activate RESIZE_EAST_MODE
kwmc bindsym RESIZE_NORTH_MODE-j mode activate RESIZE_WEST_MODE
