#!/usr/bin/env bash

CONFIG__npm_globals=(
	"eslint"
  "pnpm"
	"prettier"
  "standardjs"
	"stylelint"
)

# Create Node Version Manager (NVM) directory.
mkdir ~/.nvm
ln -sf "$OSZ_ROOT/node/default-packages.link" ~/.nvm/default-packages
nvm install node

# install_node_packages
npm install -g ${CONFIG__npm_globals[@]}
