#!/usr/bin/env bash
# installs node packages
#
# bash node/setup

# load config
if [[ -z $CONFIG__loaded ]]; then
  SCRIPTROOT="$( cd "$(dirname "$0")" ; pwd -P )"
  CURRENT=${PWD} && cd -P $SCRIPTROOT && . ../config && cd $CURRENT
fi

# Create Node Version Manager (NVM) directory.
mkdir ~/.nvm
nvm install node

# install_node_packages
npm install -g ${CONFIG__npm_globals[@]}
