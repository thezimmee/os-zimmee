#!/usr/bin/env bash
# installs and configures OS Zimmee
#
# . homebrew/setup

# load config
if [[ -z $CONFIG__loaded ]]; then
  SCRIPTROOT="$( cd "$(dirname "$0")" ; pwd -P )"
  CURRENT=${PWD} && cd -P $SCRIPTROOT && . ../config && cd $CURRENT
fi

# symlink hammerspoon
ln -s "${OSZ_ROOT}/hammerspoon/hammerspoon.link" ~/.hammerspoon
